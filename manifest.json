{
  "manifest_version": 3,
  "name": "Rhythm Overlay Game",
  "version": "3.1",
  "description": "A rhythm game overlay for web pages (YouTube, Spotify, etc.) â€” Hold notes, double notes, hit sounds, rank system.",
  "permissions": ["scripting", "activeTab", "tabCapture"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://open.spotify.com/*",
    "https://music.youtube.com/*",
    "https://www.youtube-nocookie.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
